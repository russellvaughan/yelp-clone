<%= @restaurant.name %>
<%= @restaurant.rating %>
<% @restaurant.comments.each do |comment| %>
    <ul>
        <li><%= comment.comment %>, <%= comment.rating %></li>
    </ul>
<% end %>

<h2>Comment</h2>

<%= form_for([@restaurant, @restaurant.comments.build]) do |f| %>
    <%= f.label :comment %>
    <%= f.text_field :comment %>

    <%= f.label :rating %>
    <%= f.number_field :rating %>

    <%= f.submit "Submit Review" %>
<% end %>
